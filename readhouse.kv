#:kivy 1.8
<ReadHouseApp>:
    data: {}



<kPoint>:
    name: 'no'
    color: (0,0.5,0)
    scale: 1
    posi: 0,0
    size_hint: 0.01,0.01
    pos_hint: {'center_x': self.posi[0]*3/80+.2, 'center_y': self.posi[1]*3/60+0.35}
    pos: root.posi
    canvas:
        Color:
            rgb: self.color
        Ellipse:
            size: (10,10)
            pos: root.pos[0] , root.pos[1]
    Label:
        center_x: root.pos[0]
        center_y: root.pos[1]+20
        text: str(root.name)



<kLine>:
    name: 'no'
    length: -1
    points: 0,0,0,0
    size_hint: 0.1,0.1
    canvas:
        Color:
            rgb: 1,0.5,1
        Line:
            points: self.points


